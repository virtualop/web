<div id="plugins">
  <h1>Plugins</h1>

  <h3>Core</h3>
  <ul>
    <%= render partial: "plugin", collection: @core %>
  </ul>

  <h3>Plugins <i class="fa fa-plus" data-toggle="modal" data-target="#new-plugin-dialog"></i></h3>
  <ul>
    <%= render partial: "plugin", collection: @plugins %>
  </ul>
</div>

<div class="modal fade" id="new-plugin-dialog"
  tabindex="-1" role="dialog" aria-labelledby="new-plugin-dialog-label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="new-plugin-dialog-label">New Plugin</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_tag("/plugins", method: "post") do %>
          <input type="text" name="name" placeholder="plugin name" />
          <br/>
          <input type="submit" value="go" />
        <% end %>
      </div>
    </div>
  </div>
</div>
